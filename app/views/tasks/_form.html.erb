<%= form_with(model: task, local: true) do |form| %>
  <%= form.label 'タスク名' %>
  <br>
  <%= form.text_field :title %>
  <br>
  <%= form.label 'タスク詳細' %>
  <br>
  <%= form.text_area :content %>
  <br>
  <% if current_page?(new_task_path) %>
    <%= form.submit "登録する" %>
  <% else %>
    <%= form.submit "編集する" %>
  <% end %>
<% end %>