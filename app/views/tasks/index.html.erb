<p id="notice"><%= notice %></p>
<h1>Task一覧</h1>

<%= link_to "終了期限でソートする", tasks_path(sort_expired_at: "true") %>

<table>
<head>
  <th>タスク名</th>
  <th>内容</th>
  <th>終了期限</th>
</head>

<body>
<% @tasks.each do |task| %>
  <tr class = "task_row">
      <td><%= task.title %></td>
      <td><%= task.content %></td>
      <td><%= task.expired_at %></td>
  <td><%= link_to '詳細', task_path(task.id) %></td>
  <td><%= link_to '編集', edit_task_path(task.id) %></td>
  <td><%= link_to '削除', task_path(task.id), method: :delete, data: { confirm: '本当に削除しますか？'} %></td>
  </tr>
<% end %>
</body>
</table>
<%=link_to '新規作成', new_task_path %>
